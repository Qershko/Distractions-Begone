{
    "manifest_version": 3,
    "name": "Distractions Begone!",
    "description": "Blocks destracting sites and remindes you to get back to work.",
    "version": "1.0",
    "icons": {
        "16": "/icons/book16.png",
        "48": "/icons/book48.png",
        "128": "/icons/book128.png"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "host_permissions": [
        "*://instagram.com/*"
    ],
    "permissions": [
        "declarativeNetRequest",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://instagram.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}