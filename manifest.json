{
    "manifest_version": 3,
    "name": "Distractions Begone",
    "description": "Blocks destracting sites and remindes you to get back to work.",
    "version": "1.0",
    "icons":{
        "16": "timer16.png",
        "48": "timer48.png",
        "128": "timer128.png"
    },
    "action": {
        "default_icon": "timer.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}